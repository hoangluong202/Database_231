{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceRoot": "backend",
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ESNext",
        "sourceMap": true,
        "useDefineForClassFields": true,
        "allowJs": false,
        "skipLibCheck": true,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "newLine": "LF",
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM", "DOM.Iterable", "ESNext.AsyncIterable"],
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "@fe/assets/*": ["frontend/assets/*"],
            "@fe/components": ["frontend/components"],
            "@fe/constants": ["frontend/constants"],
            "@fe/hooks": ["frontend/hooks"],
            "@fe/interfaces": ["frontend/interfaces"],
            "@fe/layouts": ["frontend/layouts"],
            "@fe/pages": ["frontend/pages"],
            "@fe/services": ["frontend/services"],
            "@fe/states": ["frontend/states"],
            "@fe/utils": ["frontend/utils"],

            "@be/handlers": ["backend/handlers"],
            "@be/constants": ["backend/constants"],
            "@be/services": ["backend/services"],
            "@be/dtos/in": ["backend/dtos/in"],
            "@be/dtos/out": ["backend/dtos/out"],
            "@be/dtos/common": ["backend/dtos/common.dto"],
            "@be/configs": ["backend/configs"],
            "@be/configs/*": ["backend/configs/*"],
            "@be/repositories": ["backend/repositories"],
            "@be/utils": ["backend/utils"],
            "@be/hooks": ["backend/hooks"],
            "@be/routes": ["backend/routes"],
            "@be/interfaces": ["backend/interfaces"],
            "#package.json": ["./package.json"]
        }
    },
    "include": ["frontend", "**/*.js", "**/*.ts", "**/*.tsx", "*.cjs"],
    "exclude": ["node_modules", "dist", "coverage"],
    "linterOptions": {
        "exclude": []
    },
    "references": [{ "path": "./tsconfig.node.json" }]
}
